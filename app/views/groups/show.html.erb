<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Group detail</h2>
  		<table class='table'>
  		  <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介</th>
          </tr>
        </thead>
        <tbody>
    		  <tr>
            <td>
              <%= link_to(@group) do %>
                <%= image_tag @group.get_group_image, size:"100x100" %>
              <% end %>
            </td>
            <td><%= link_to @group.name, @group %></td>
            <td><%= @group.introduction %></td>
            <% if @group.owner_id == current_user.id %>
              <td><%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to 'Destroy', @group, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>